# ===================================
# TEMPLATE DE CONFIGURATION
# Copier ce fichier vers .env et remplir les valeurs
# ===================================

# === MODE D'EXECUTION ===
# Valeurs possibles: development, production, dry_run
ENVIRONMENT=development

# Activer le mode dry-run (simulation sans argent réel)
# Valeurs: true, false
DRY_RUN_MODE=true

# === BINANCE CONFIGURATION ===
# Testnet: https://testnet.binance.vision
# Production: https://api.binance.com
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BINANCE_TESTNET=true

# === KRAKEN CONFIGURATION ===
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_secret_here

# === COINBASE PRO CONFIGURATION (Optionnel) ===
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# === DATABASE CONFIGURATION ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arbitrage_db
DB_USER=arbitrage_user
DB_PASSWORD=your_secure_password_here

# URL de connexion complète (alternative)
DATABASE_URL=postgresql://arbitrage_user:your_secure_password_here@localhost:5432/arbitrage_db

# === REDIS CONFIGURATION (Optionnel) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === TRADING PARAMETERS ===
# Montant minimum par trade (USD)
MIN_TRADE_AMOUNT=10

# Montant maximum par trade (USD)
MAX_TRADE_AMOUNT=100

# Profit minimum requis (en pourcentage, ex: 0.5 pour 0.5%)
MIN_PROFIT_THRESHOLD=0.5

# Nombre maximum de trades par jour
MAX_DAILY_TRADES=50

# Perte maximale quotidienne (USD)
MAX_DAILY_LOSS=500

# === MONITORING & ALERTS ===
# Telegram Bot Token (pour les alertes)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email pour alertes critiques (optionnel)
ALERT_EMAIL=your_email@example.com

# === LOGGING CONFIGURATION ===
# Niveau de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Activer les logs JSON structurés
LOG_JSON=true

# Dossier des logs
LOG_DIR=./logs

# === TRADING PAIRS ===
# Paires à surveiller (séparées par des virgules)
TRADING_PAIRS=BTC/USDT,ETH/USDT

# === PERFORMANCE SETTINGS ===
# Intervalle de collecte des prix (secondes)
PRICE_COLLECTION_INTERVAL=5

# Timeout pour les requêtes API (secondes)
API_TIMEOUT=10

# Nombre de retries en cas d'erreur
MAX_RETRIES=3

# === RISK MANAGEMENT ===
# Circuit breaker: Arrêter si perte en X minutes
CIRCUIT_BREAKER_LOSS_THRESHOLD=100
CIRCUIT_BREAKER_TIME_WINDOW=30

# Nombre max d'erreurs consécutives avant arrêt
MAX_CONSECUTIVE_ERRORS=5

# === ADVANCED SETTINGS ===
# Activer le cache Redis
USE_CACHE=false

# Durée de vie du cache (secondes)
CACHE_TTL=5

# Activer l'interface web
ENABLE_WEB_INTERFACE=false
WEB_PORT=5000

# === NOTES ===
# 1. Ne JAMAIS commiter le fichier .env dans Git
# 2. Garder ce template à jour quand vous ajoutez des variables
# 3. Utiliser des mots de passe forts pour la production
# 4. Les clés API doivent avoir des permissions minimales (pas de retrait)
